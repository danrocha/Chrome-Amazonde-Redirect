{
  "name": "Amazon.de Redirect",
  "manifest_version": 2,
  "version": "1.1",
  "description": "View an Amazon.com product page on Amazon.de",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
      "default_icon": "icon16.png"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "permissions": ["tabs"]
}
